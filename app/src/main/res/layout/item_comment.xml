<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_id_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:fontFamily="@font/nanum_barun_gothic"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/item_comment_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="댓글"
                android:fontFamily="@font/nanum_barun_gothic"
                android:layout_below="@+id/item_id_tv"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:textSize="10dp"
                android:fontFamily="@font/nanum_barun_gothic"
                android:layout_below="@+id/item_comment_tv"
                />
            <Button
                android:id="@+id/item_reply_btn"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_below="@+id/item_comment_tv"
                android:layout_toRightOf="@+id/item_time_tv"
                android:text="답글 달기"
                android:textSize="10dp"
                android:fontFamily="@font/nanum_barun_gothic"
                android:background="@color/transparent"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>