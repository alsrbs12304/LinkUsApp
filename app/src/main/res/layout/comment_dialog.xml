<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:id="@+id/comment_activity"
    android:background="@layout/dialog_background_round">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_barun_gothic"
                android:text="댓글을 입력해 주세요."
                android:textColor="@color/black"
                android:textSize="23dp" />
        </androidx.appcompat.widget.Toolbar>
        <View
            android:id="@+id/toolbar_div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/toolbar"
            android:background="@color/gray300" />
        <EditText
            android:gravity="left|top"
            android:id="@+id/comment_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:background="@color/transparent"
            android:layout_below="@+id/toolbar_div"
            android:layout_above="@+id/button_layout"
            android:textSize="16dp"
            android:hint="내용을 입력하세요."/>
        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            >
            <CheckedTextView
                android:id="@+id/chk_secret_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:fontFamily="@font/nanum_barun_gothic"
                android:gravity="center"
                android:text="비밀 댓글"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_alignParentLeft="true"/>
            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_barun_gothic"
                android:background="@color/transparent"
                android:textColor="@color/red500"
                android:stateListAnimator="@null"
                android:layout_marginRight="16dp"
                android:textSize="16dp"
                android:padding="3dp"
                android:text="취소"
                android:layout_toLeftOf="@+id/complete_btn"
                />
            <Button
                android:id="@+id/complete_btn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:textColor="@color/red500"
                android:fontFamily="@font/nanum_barun_gothic"
                android:textSize="16dp"
                android:text="완료"
                android:background="@color/transparent"
                android:stateListAnimator="@null"
                android:padding="3dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>