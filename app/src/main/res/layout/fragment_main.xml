<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".view.fragment.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/img_programer"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/select_study"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:background="@drawable/form_button_round"
            android:text="대표 스터디 선택"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_square_ac_l"
            android:layout_gravity="center"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/select_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/noting_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="내 그룹이 없습니다."
                android:gravity="center"
                android:fontFamily="@font/nanum_square_ac_b"
                android:textColor="@color/gray400"
                android:visibility="invisible"
               />
            <TextView
                android:id="@+id/default_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="대표 그룹을 설정하지 않았습니다."
                android:gravity="center"
                android:fontFamily="@font/nanum_square_ac_b"
                android:textColor="@color/black"
                android:visibility="visible"
               />
        </FrameLayout>

    </LinearLayout>
</ScrollView>