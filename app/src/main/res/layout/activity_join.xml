<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.JoinActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/transparent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/nanum_square_ac_b"
                android:text="회원가입"
                android:textColor="@color/black"
                android:textSize="23dp" />


        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="@color/black"/>

        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textSize="15dp"
                android:fontFamily="@font/nanum_square_ac_b"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="40dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <EditText
                android:id="@+id/join_id"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="50dp"
                android:hint="6~12자리 영문자 (특수문자, 한글 X)"
                android:textSize="13dp"/>
                <Button
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:text="중복확인"
                    android:textColor="@color/red500"
                    android:background="@drawable/bttuon_background2"
                    android:fontFamily="@font/nanum_square_ac_b" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textSize="15dp"
                android:fontFamily="@font/nanum_square_ac_b"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="100dp"/>

            <EditText
                android:id="@+id/join_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="110dp"
                android:hint="8자리 이상 영문자 (특수문자 X)"
                android:textSize="13dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                android:textSize="15dp"
                android:fontFamily="@font/nanum_square_ac_b"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="160dp"/>

            <EditText
                android:id="@+id/join_password_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="170dp"
                android:hint="비밀번호 확인"
                android:textSize="13dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="15dp"
                android:fontFamily="@font/nanum_square_ac_b"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="220dp"/>

            <EditText
                android:id="@+id/join_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="230dp"
                android:hint="실명을 입력하세요"
                android:textSize="13dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textSize="15dp"
                android:fontFamily="@font/nanum_square_ac_b"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="280dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/join_email"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="290dp"
                    android:hint="이메일 주소를 입력하세요"
                    android:textSize="13dp" />

                <Button
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="290dp"
                    android:text="인증번호 전송"
                    android:textColor="@color/red500"
                    android:background="@drawable/bttuon_background2"
                    android:fontFamily="@font/nanum_square_ac_b" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증번호"
                android:textSize="15dp"
                android:fontFamily="@font/nanum_square_ac_b"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="340dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/join_certification"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="350dp"
                android:hint="인증번호 입력"
                android:textSize="13dp"/>

                <Button
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="350dp"
                    android:text="확인"
                    android:textColor="@color/red500"
                    android:background="@drawable/bttuon_background2"
                    android:fontFamily="@font/nanum_square_ac_b"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textSize="15dp"
                android:fontFamily="@font/nanum_square_ac_b"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="400dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/join_birth"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="410dp"
                    android:hint="생년월일 입력(8자리)"
                    android:textSize="13dp"/>

                <RadioButton
                    android:id="@+id/join_gender1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_ac_b"
                    android:checked="true"
                    android:buttonTint="@color/red500"
                    android:layout_marginTop="410dp"
                    android:layout_marginLeft="30dp"
                    android:text="남자"/>

                <RadioButton
                    android:id="@+id/join_gender2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_ac_b"
                    android:checked="false"
                    android:buttonTint="@color/red500"
                    android:layout_marginTop="410dp"
                    android:layout_marginLeft="15dp"
                    android:text="여자"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="@font/nanum_square_ac_b"
                android:layout_marginTop="460dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:textSize="30dp"
                android:text="회원가입"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>