<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="adapter"
            type="com.example.linkusapp.view.adapter.RequestAdapter" />
        <variable
            name="position"
            type="Integer" />
        <variable
            name="user"
            type="com.example.linkusapp.model.vo.User" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:elevation="8dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/user_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{user.userNickname}"
                android:textSize="18dp"
                android:fontFamily="@font/nanum_square_ac_b"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/user_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{user.age}"
                android:fontFamily="@font/nanum_square_ac_b"
                android:textColor="@color/gray700"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/user_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{user.gender}"
                android:fontFamily="@font/nanum_square_ac_b"
                android:textColor="@color/gray700"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/user_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{user.address}"
                android:fontFamily="@font/nanum_square_ac_b"
                android:textColor="@color/gray700"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
           <ImageButton
               android:id="@+id/accept_bt"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/icon_check_gray"
               android:background="@color/transparent"
               android:layout_gravity="center_vertical"
               android:onClick="@{()->adapter.acceptBtnClickEvent(position)}"
               >
           </ImageButton>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>