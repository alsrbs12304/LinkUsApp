<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_layout"
    tools:context=".view.HomeActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/saving_book"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Link US"
            android:textSize="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/nanum_square_ac_eb"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp">
        <EditText
            android:id="@+id/login_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID"
            android:fontFamily="@font/nanum_square_ac_b"
            android:textSize="20dp"
            android:maxLength="12"
            />
        <EditText
            android:id="@+id/login_password"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="20dp"
            android:inputType="textPassword"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:gravity="right"
            android:textColor="@color/red500"/>
    </LinearLayout>

    <Button
        android:id="@+id/signinbtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/form_button_round"
        android:fontFamily="@font/nanum_square_ac_b"
        android:text="Login"
        android:textColor="@color/white"
        android:elevation="8dp"
        android:textSize="15dp" />

    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in with"
        android:fontFamily="@font/nanum_square_ac_b"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <ImageButton
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/googlered3"
            android:background="@drawable/button_background3"
            android:scaleType="fitXY"
            android:padding="20dp"
            android:elevation="8dp"
            />
        <ImageButton
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/facebook2"
            android:background="@drawable/button_background3"
            android:scaleType="fitXY"
            android:elevation="8dp"
            android:padding="10dp"
            />
        <ImageButton
            android:id="@+id/kakaoLoginBt"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/kakaoblack2"
            android:background="@drawable/button_background3"
            android:scaleType="fitXY"
            android:padding="8dp"
            android:elevation="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="95dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:fontFamily="@font/nanum_square_ac_b"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/go_to_join_bt"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:fontFamily="@font/nanum_square_ac_b"
            android:textSize="15dp"
            android:textColor="@color/black"
            />
    </LinearLayout>

</LinearLayout>